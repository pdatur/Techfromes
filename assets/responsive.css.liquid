/* ************************************* 1200px  ************************************* */

@media (min-width: 1200px) {



}



/* ************************************* < 1200px ************************************* */

@media (max-width: 1200px) {

.header_search #search-field {width: 416px;}
  
  

.header_cart a span.ndash,
.header_cart a span.money {display: none;}



/*  SLIDER*/
.nivo-caption {padding: 0 40px 0 365px;}
.nivo-caption h2 {padding: 60px 0 0 0;font-size: 33px;}
.nivo-caption h3 {font-size: 15px;}

.nivo-prevNav {left: 15px;}
.nivo-nextNav {right: 15px;}



#showcase .custom_showcase {padding: 0;}



#main_content .product .product_info {padding: 15px;}



/* BEST SELLERS */
.widget__best-sellers {}

.widget__best-sellers .product {text-align: center;}
.widget__best-sellers .product .product_img {width: 100%;float: none;}
.widget__best-sellers .product .product_img a {width: 100px;margin: 0 auto;}

.widget__best-sellers .product .product_info {margin: 0;}

.widget__best-sellers .product .product_name {padding: 10px 0 0 0;top: 0;}



.product_wrap #bx-pager a {width: 84px;}

}



/* ************************************* < 980px ************************************* */

@media (max-width: 992px) {

.header_search #search-field {width: 301px;}



/*  SLIDER*/
.nivo-caption {padding: 0 40px 0 285px;}
.nivo-caption h2 {padding: 21px 0 0 0;font-size: 20px;}
.nivo-caption h3 {font-size: 13px;}



.product_wrap #bx-pager a {width: 61px;}

}



/* ************************************* < 767px ************************************* */

@media (max-width: 767px) {

.container {padding:0 15px;}

.column_left,
.column_right,
.column_center,
#main_content {margin-left: 0 !important;margin-right: 0 !important;}



/* HEADER */
#header {}

#logo {text-align: center;}
#logo a b {margin: 0;}

.custom_header__1 {padding: 20px 0 0 0;text-align: center;}

ul.header_user {float: none;text-align: center;}
ul.header_user li {display: inline-block;float: none;}

.header_row__3 {height: auto;padding-bottom: 15px;}

.header_search {overflow: hidden;}
.header_search #search-field {width: 100%;padding: 0 65px 0 10px;
-webkit-border-radius: 4px;
   -moz-border-radius: 4px;
        border-radius: 4px;
}
.header_search #search-submit {margin: 0 0 0 -53px;}

.header_cart a span.ndash,
.header_cart a span.money {display: inline-block;}

.header_cart {margin: 15px 0 0 0;}



/*  SLIDER*/
.nivo-caption {display: none !important;}



/* MAIN PRODUCT LISTING */
#main_content .product {margin-top: 15px;}
#main_content .product > div {overflow: hidden;}

#main_content .product .product_img {width: 110px;float: left;border-right: 1px solid {{ settings.border_color }};}
#main_content .product .product_img a {padding: 10px;}
#main_content .product .product_img a span.sale {left: 5px;top: 5px;}

#main_content .product .product_info {margin: 0 0 0 109px;border: none;border-left: 1px solid {{ settings.border_color }};}

#main_content .product .product_desc {}



.widget__collections {margin-top: 0;}

.widget__types .widget_content {margin-top: 0;}



/* BEST SELLERS */
.widget__best-sellers {}

.widget__best-sellers .product {margin: 15px 0 0 0;text-align: left;}
.widget__best-sellers .product .product_img {width: 100px;float: left;}
.widget__best-sellers .product .product_img a {margin: 0;}

.widget__best-sellers .product .product_info {margin: 0 0 0 115px;}

.widget__best-sellers .product .product_name {padding: 0;position: relative;top: -4px;}



/* FOOTER */
.custom_footer h3 {padding: 25px 0 0 0;}

#footer .copyright {text-align: center;}



.product_wrap .product_name {margin: 0;padding: 30px 0 0 0;}



.cart_buttons {text-align: center;}
.cart_buttons span.or {display: block;margin: 5px 0;}


}



/* ************************************* < 640px ************************************* */

@media (max-width: 640px) {



}



/* ************************************* < 480px ************************************* */

@media (max-width: 480px) {

#showcase .custom_showcase a {text-align: center;}
#showcase .custom_showcase a div {padding: 15px;text-align: center;position: relative;left: auto;top: auto;}
#showcase .custom_showcase a div h3 {padding: 10px 0 0 0;}
#showcase .custom_showcase a div h4 {padding: 10px 0 0 0;}



#main_content .product .product_desc {display: none;}



.custom_footer {width: 100%;float: none;}

}



