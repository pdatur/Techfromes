{% if settings.slide5_link != '' %}</a>{% endif %}
{% endif %}

</div>
</div>

{% if settings.slider_captions_toggle %}
<div class="caption_hidden">

    <div id="htmlcaption-1">
        {% if settings.slide1_link != '' %}<a href="{{ settings.slide1_link }}">{% endif %}
        <h2>{{ settings.slide1_caption1 }}</h2>
        <h3>{{ settings.slide1_caption2 }}</h3>
        <span class="btn btn_slider">{{ settings.slide1_caption3 }}</span>
        {% if settings.slide1_link != '' %}</a>{% endif %}
    </div>

    <div id="htmlcaption-2">
        {% if settings.slide2_link != '' %}<a href="{{ settings.slide2_link }}">{% endif %}
        <h2>{{ settings.slide2_caption1 }}</h2>
        <h3>{{ settings.slide2_caption2 }}</h3>
        <span class="btn btn_slider">{{ settings.slide2_caption3 }}</span>
        {% if settings.slide2_link != '' %}</a>{% endif %}
    </div>

    <div id="htmlcaption-3">
        {% if settings.slide3_link != '' %}<a href="{{ settings.slide3_link }}">{% endif %}
        <h2>{{ settings.slide3_caption1 }}</h2>
        <h3>{{ settings.slide3_caption2 }}</h3>
        <span class="btn btn_slider">{{ settings.slide3_caption3 }}</span>
        {% if settings.slide3_link != '' %}</a>{% endif %}
    </div>

    <div id="htmlcaption-4">
        {% if settings.slide4_link != '' %}<a href="{{ settings.slide4_link }}">{% endif %}
        <h2>{{ settings.slide4_caption1 }}</h2>
        <h3>{{ settings.slide4_caption2 }}</h3>
        <span class="btn btn_slider">{{ settings.slide4_caption3 }}</span>
        {% if settings.slide4_link != '' %}</a>{% endif %}
    </div>

    <div id="htmlcaption-5">
        {% if settings.slide5_link != '' %}<a href="{{ settings.slide5_link }}">{% endif %}
        <h2>{{ settings.slide5_caption1 }}</h2>
        <h3>{{ settings.slide5_caption2 }}</h3>
        <span class="btn btn_slider">{{ settings.slide5_caption3 }}</span>
        {% if settings.slide5_link != '' %}</a>{% endif %}
    </div>

</div>
{% endif %}

<script type="text/javascript">
$(window).load(function() {
    $('.nivoSlider').nivoSlider({
        effect:'fade',
        animSpeed:500,
        pauseTime:7000,
        startSlide:0,
        pauseOnHover:true,
        directionNav:true,
        directionNavHide:false,
        controlNav:false
    });
});
</script>
{% endif %}