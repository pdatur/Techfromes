{% if settings.slider_toggle %}
<div class="slider_wrap">
<div class="nivoSlider">

{% if settings.slide1_toggle %}
{% if settings.slide1_link != '' %}<a href="{{ settings.slide1_link }}">{% endif %}
<img src="{{ 'slide1_image.jpg' | asset_url }}" title="#htmlcaption-1" />
{% if settings.slide1_link != '' %}</a>{% endif %}
{% endif %}

{% if settings.slide2_toggle %}
